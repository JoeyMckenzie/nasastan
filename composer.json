{
    "name": "joeymckenzie/nasastan",
    "description": "A PHPStan plugin to enforce NASA's Power of Ten rules.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nasastan\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Joey McKenzie",
            "email": "joey.mckenzie27@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "laravel/pint": "^1.21",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "rector/rector": "^2.0",
        "peckphp/peck": "^0.1.2",
        "phpunit/phpunit": "^12.0"
    },
    "scripts": {
        "prepare": "git config core.hookspath .githooks && lefthook install",
        "test": "vendor/bin/phpunit",
        "fmt": "vendor/bin/pint",
        "fmt:test": "vendor/bin/pint --test",
        "lint": "vendor/bin/phpstan analyze",
        "refactor": "vendor/bin/rector process",
        "refactor:test": "vendor/bin/rector process --dry-run",
        "typos": "vendor/bin/peck",
        "check": [
            "@test",
            "@fmt:test",
            "@lint",
            "@refactor:test",
            "@peck"
        ],
        "fix": [
            "@refactor",
            "@fmt"
        ],
        "prep": [
            "@fix",
            "@check"
        ],
        "ci": [
            "@lint",
            "@fmt:test",
            "@refactor:test",
            "@test:ci",
            "@peck"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    }
}
